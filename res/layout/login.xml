<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:layout_height="50dp"
        android:padding="5dp"
        android:textSize="20dp"
        android:gravity="bottom"
        android:inputType="textEmailAddress" 
        android:background="@drawable/edit_text_ics_blue" >

    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtUser"
        android:layout_below="@+id/txtUser"
        android:layout_marginTop="20dp"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/txtUser"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:inputType="textPassword" 
        android:hint="Password"
        android:layout_height="50dp"
        android:padding="5dp"
        android:textSize="20dp"
        android:gravity="bottom"
        android:background="@drawable/edit_text_ics_blue"/>

    <TextView
        android:id="@+id/cmdRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginTop="18dp"
        android:text="@string/newuser"
        android:textSize="18dp"
        android:textColor="#414042" />

    <CheckBox
        android:id="@+id/chkRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPass"
        android:layout_below="@+id/txtPass"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="@string/strRemember" 
        android:textColor="#414042"/>

